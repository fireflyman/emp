<h1>Listing publishers</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for publisher in @publishers %>
  <tr>
    <td><%=h publisher.name %></td>
    <td><%= link_to 'Show', publisher %></td>
    <td><%= link_to 'Edit', edit_publisher_path(publisher) %></td>
    <td><%= link_to 'Destroy', publisher, :confirm => "Are you sure you want to delete publisher #{publisher.name}?", :method => :delete %></td>
                                     
<% end %>
</table>

<br />

<%= link_to 'New publisher', new_publisher_path %>
