
<table>
  <tr>
    <th><a href="?sort_by=title">Title</a></th>
    <th><a href="?sort_by=publisher_id">Publisher</a></th>
    <th>Tags</th>
    <th><a href="?sort_by=isbn">Isbn</a></th>
    <th colspan="3"></th>
  </tr>

<% for book in @books %>
  <tr>
    <td><%=h book.title %></td>
    <td><%=h book.publisher.name %></td>
    <td><%= book.tags %></td>

  
    <td><%=h book.isbn %></td> 
    <td><%= link_to 'Show', book %> |
    <%= link_to 'Edit', edit_book_path(book) %> |
    <%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @books ,
    :inner_window => 1,  
    :outer_window => 1,  
    :prev_label => 'Previous',  
    :next_label => 'Next'
    %>
<br />
<%= link_to 'Add anthorer new book', new_book_path %>

<br/>
<ol class="tagCloud">
<% tag_cloud(@book.sort_by {|t| t.name}) do |tag, size| %>
<li><%= link_to h("#{tag.name}"), { :action => "show_tag/#{tag.name}" }, 
{ :style => "font-size:#{size}%"}%></li>
<% end %>
</ol>


