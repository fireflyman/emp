  <dd><%= @book.tags %></dd>
          
  <dt>Publisher:</dt>
  <dd><%= @book.publisher.name %></dd>

  <dt>Published at:</dt>
  <dd><%= @book.published_at.strftime("%m/%d/%Y at %I:%M%p") %></dd>

  <dt>ISBN</dt>
  <dd><%= @book.isbn %></dd>

  <dt>Blurb</dt>
  <dd><%= @book.blurb %></dd>

  <dt>Page count</dt>
  <dd><%= @book.page_count %></dd>

  <dt>Price:</dt>
  <dd><%=h @book.price %></dd>

  <dt>Small Photo:</dt>
  <dd><%= image_tag @book.photo.url(:small) %></dd>  
  <script type="text/javascript">  
   fix_image_size($$('div#news_body img'), 700);  
  </script>  

</dl>

