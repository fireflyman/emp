<h1>Editing book</h1>

<%= error_messages_for :book %>

<% form_for(@book) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Publisher</b><br />
    <%= f.text_field :publisher_id %>
  </p>

  <p>
    <b>Published at</b><br />
    <%= f.datetime_select :published_at %>
  </p>

  <p>
    <b>Isbn</b><br />
    <%= f.text_field :isbn %>
  </p>

  <p>
    <b>Blurb</b><br />
    <%= f.text_area :blurb %>
  </p>

  <p>
    <b>Page count</b><br />
    <%= f.text_field :page_count %>
  </p>

  <p>
    <b>Price</b><br />
    <%= f.text_field :price %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @book %> |
<%= link_to 'Back', books_path %>
